vpath %.h ./headers
vpath %.cpp . ./f_input ./f_output ./sudoku_error

output: inputfile.o outputfile.o sudoku_error.o main.o
	g++ $^ -o $@

inputfile.o: inputfile.cpp inputfile.h sudoku_error.h
	g++ -I./headers -c -std=c++11  $< -o $@

outputfile.o: outputfile.cpp outputfile.h sudoku_error.h
	g++ -I./headers -c -std=c++11 $< -o $@

sudoku_error.o: sudoku_error.cpp sudoku_error.h
	g++ -I./headers -c -std=c++11 $< -o $@

main.o: main.cpp inputfile.h outputfile.h sudoku_error.h
	g++ -I./headers -c -std=c++11 $< -o $@
